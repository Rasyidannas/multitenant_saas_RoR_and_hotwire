<div class="flex items-center justify-center h-screen bg-gray-200">
  <div class="w-full p-8 bg-gray-100 rounded-lg shadow-lg md:max-w-md">
    <h2 class="mb-6 text-2xl font-bold text-center text-gray-800">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block mb-2 text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block mb-2 text-gray-700"%>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-lg" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2 mb-4">
          <%= f.check_box :remember_me, class: "block text-gray-700" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="flex justify-center mb-6">
        <%= f.submit "Log in", class: "cursor-pointer w-full bg-orange-600 px-4 py-3 text-white font-semibold rounded-lg shadow-md hover:bg-orange-700" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
