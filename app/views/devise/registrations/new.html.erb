<div class="flex items-center justify-center h-screen bg-gray-200">
  <div class="p-8 bg-gray-100 rounded-lg shadow-lg md:max-w-md">
    <h2 class="mb-6 text-2xl font-bold text-center text-gray-800">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block mb-2 text-gray-700" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-lg" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block mb-2 text-gray-700" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block mb-2 text-gray-700" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-lg"%>
      </div>

      <div class="flex justify-center mb-6">
        <%= f.submit "Sign up", class: "cursor-pointer w-full bg-orange-600 px-4 py-3 text-white font-semibold rounded-lg shadow-md hover:bg-orange-700" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
